<h1 class="mb-4">Cápsulas</h1>

<% if @capsules.any? %>
  <div class="mb-3">
    <h5>Primera cápsula cargada: <strong><%= @capsules.first.title %></strong></h5>
  </div>

  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Título</th>
        <th>Descripción</th>
        <th>Aprobado</th>
        <th>Usuario</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @capsules.each do |capsule| %>
        <tr>
          <td><%= capsule.title %></td>
          <td><%= capsule.description %></td>
          <td><%= capsule.approved ? 'Sí' : 'No' %></td>
          <td><%= capsule.user.email %></td>
          <td>
            <%= link_to 'Ver', admin_capsule_path(capsule), class: 'btn btn-sm btn-outline-primary me-1' %>
            <%= link_to 'Editar', edit_admin_capsule_path(capsule), class: 'btn btn-sm btn-outline-warning me-1' %>
            <%= link_to 'Eliminar', admin_capsule_path(capsule), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-sm btn-outline-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info">No hay cápsulas para mostrar.</div>
<% end %>

<div class="d-flex justify-content-between mt-4">
  <%= link_to 'Crear nueva cápsula', new_admin_capsule_path, class: 'btn btn-primary' %>
  <%= link_to 'Volver', admin_dashboard_path, class: 'btn btn-secondary' %> <!-- ajustá este path si volvés a otro lugar -->
</div>
