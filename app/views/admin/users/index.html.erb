<h1 class="mb-4">Usuarios</h1>

<% if @users.any? %>
  <div class="mb-3">
    <h5>Total de usuarios: <strong><%= @users.count %></strong></h5>
  </div>

  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Admin</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.admin? ? 'Sí' : 'No' %></td>
          <td>
            <%= link_to 'Ver', admin_user_path(user), class: 'btn btn-sm btn-outline-primary me-1' %>
            <%= link_to 'Editar', edit_admin_user_path(user), class: 'btn btn-sm btn-outline-warning me-1' %>
            <%= link_to 'Eliminar', admin_user_path(user), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-sm btn-outline-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info">No hay usuarios para mostrar.</div>
<% end %>

<div class="d-flex justify-content-between mt-4">
  <%= link_to 'Crear nuevo usuario', new_admin_user_path, class: 'btn btn-primary' %>
  <%= link_to 'Volver', admin_dashboard_path, class: 'btn btn-secondary' %> <!-- ajustá el destino si querés -->
</div>
